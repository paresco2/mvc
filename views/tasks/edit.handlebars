<h1>Edicao de Task {{tasks.title}}</h1>

<form action="/tasks/edit" method="POST">
    
        <input type="hidden" name="id" value="{{tasks.id}}">
    
    <div class="form-control">
        <label for="title">Titulo:</label>
        <input type="text" name="title" placeholder="O que voce vai fazer" value="{{tasks.title}}">
    </div>
    <div class="form-control">
        <label for="description">Descricao:</label>
        <textarea name="description" rows="10" placeholder="Descreva a tarefa..." >{{tasks.description}}</textarea>
    </div>
    <input type="submit" value="Gravar">

</form>
